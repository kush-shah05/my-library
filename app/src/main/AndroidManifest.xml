<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Webviewactivity"
            android:label="@string/activity_about"/>

        <activity android:name=".Favouritebooksactivity"
            android:label="@string/activity_favorite_book"/>
        <activity android:name=".Currentlyreadingactivity"
            android:label="@string/activity_currently_read"/>
        <activity android:name=".Wanttoreadactivity"
            android:label="@string/activity_wanttoread"/>
        <activity android:name=".Alreadyreadactivity"
            android:label="@string/activity_already_read"/>
        <activity android:name=".BookActivity"
            android:label="@string/activity_book"/>
        <activity android:name=".AllBooksActivity"
            android:label="@string/activity_all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>